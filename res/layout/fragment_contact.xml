<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    	<RelativeLayout
    	    android:id="@+id/new_friend"
    	    android:layout_width="match_parent"    	    
    	    android:layout_height="62dp"
    	    android:background="@drawable/common_list_item_background">
    	    
    	        <ImageView
        android:id="@+id/icon"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:duplicateParentState="true"
        android:layout_marginLeft="10.0dip"
        android:src="@drawable/new_friends" />
    	    
    	    

    	<TextView
			android:layout_toRightOf="@id/icon"
    	    android:layout_width="match_parent"
    	    android:layout_height="62dp"
    	    android:layout_marginLeft="10dp"
    	    android:text="@string/new_friends_title"
    	    android:textColor="@color/black"
    	    android:textSize="16sp"
    	    android:gravity="center_vertical|left"
    	    />
    	
          <TextView
            android:id="@+id/unreadFriends"
            android:layout_width="16dip"
            android:layout_height="16.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/list_newmessage2"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:shadowColor="#19000000"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:visibility="gone"
            android:textColor="#ffffffff"
            android:textSize="10.0dip" />  	
    	
    	
        	</RelativeLayout>
	    <ListView
	        android:id="@+id/topList"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/white"
	        
	        />
	    <ListView
	        android:id="@+id/rosterList"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/white"        
	        />
</LinearLayout>
